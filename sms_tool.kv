#:kivy 2.1.0

<SMSTool>
  id: sms_tool
  orientation: 'vertical'
  padding: '50dp', '40dp'
  spacing: '10dp'
  BoxLayout:
    orientation: 'horizontal'
    spacing: '10dp'
    size_hint_y: None
    height: '28dp'
    FieldLabel:
      text: 'Account SID:'
    TextInput:
      id: text_input_account_sid
      multiline: False
      hint_text: 'Paste your Twilio Account SID...'
  BoxLayout:
    orientation: 'horizontal'
    spacing: '10dp'
    size_hint_y: None
    height: '28dp'
    FieldLabel:
      text: 'Auth Token:'
    TextInput:
      id: text_input_auth_token
      multiline: False
      hint_text: 'Paste your Twilio Auth Token...'
  BoxLayout:
    orientation: 'horizontal'
    spacing: '10dp'
    size_hint_y: None
    height: '28dp'
    FieldLabel:
      text: 'From Number:'
    TextInput:
      id: text_input_from_number
      multiline: False
      hint_text: 'Paste your Twilio phone number...'
  BoxLayout:
    orientation: 'horizontal'
    spacing: '10dp'
    size_hint_y: None
    height: '28dp'
    FieldLabel:
      text: 'Contacts File:'
    TextInput:
      id: text_input_contacts
      hint_text: 'Drag and drop .csv file anywhere...'
      disabled: True
      multiline: False
  BoxLayout:
    orientation: 'horizontal'
    spacing: '10dp'
    size_hint_y: None
    height: '28dp'
    FieldLabel:
      text: 'Rate Limit:'
    TextInput:
      id: text_input_rate_limit
      input_filter: 'int'
      multiline: False
      size_hint_x: None
      width: '30dp'
      text: '1'
    Label:
      text: 'message(s) per second'
      text_size: self.size
      halign: 'left'
      valign: 'middle'
  FieldLabel:
    size_hint_y: None
    height: '28dp'
    valign: 'bottom'
    text: 'Message:'
  TextInput:
    id: text_input_message
    size_hint_y: None
    height: '140dp'
    hint_text: 'Type your SMS text here...'
  FieldLabel:
    text: 'Loaded Contacts:'
    valign: 'bottom'
    size_hint_y: None
    height: '28dp'
  BoxLayout:
    orientation: 'vertical'
    BoxLayout:
      orientation: 'horizontal'
      spacing: '1dp'
      size_hint_y: None
      height: '30dp'
      DataHeader:
        text: '#'
        size_hint_x: None
        width: '50dp'
      DataHeader:
        text: 'First'
      DataHeader:
        text: 'Last'
      DataHeader:
        text: 'Phone'
      DataHeader:
        text: 'Status'
        size_hint_x: None
        width: '110dp'
      DataHeader:
        size_hint_x: None
        width: '10dp'
        canvas.before:
          Color: 
            rgb: 0, 0, 0
          Rectangle:
            pos: self.pos
            size: self.size
    RV:
      id: recycle_view
      scroll_type: ['bars']
      smooth_scroll_end: 10
      bar_color: 119/255, 170/255, 221/255, 1
      bar_inactive_color: 73/255 ,140/255, 194/255, 1
      bar_width: '10dp'
      height: sms_tool.height
      canvas.after:
        Color:
          rgba: .7, .7, .7, 1
        Line:
          width: dp(1)
          rectangle: self.x, self.y, self.width + dp(2), self.height

  BoxLayout:
    orientation: 'horizontal'
    spacing: '15dp'
    size_hint_y: None
    height: '40dp'
    Button:
      id: button_send
      size_hint_x: 0.8
      text: 'Send 0 Messages'
      disabled: True
      background_disabled_normal: self.background_normal
      disabled_color: 0, 0, 0, 1
    Button:
      id: button_pause
      size_hint_x: 0.2
      text: 'Pause'
      disabled: True
      background_disabled_normal: self.background_normal
      disabled_color: 0, 0, 0, 1

<RV>:
  viewclass: 'DataRow'
  RecycleBoxLayout:
    default_size: None, None
    default_size_hint: 1, None
    spacing: '1dp'
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'

<DataRow>
  cols: 6
  spacing: '1dp'
  height: '30dp'
  size_hint_y: None
  index_text: ''
  first_name_text: ''
  last_name_text: ''
  phone_text: ''
  status_text: ''
  DataCell:
    id: cell_index
    size_hint_x: None
    width: '50dp'
    text: root.index_text
  DataCell:
    id: cell_first_name
    text: root.first_name_text
  DataCell:
    id: cell_last_name
    text: root.last_name_text
  DataCell:
    id: cell_phone
    text: root.phone_text
  DataCell:
    id: cell_status
    size_hint_x: None
    width: '110dp'
    text: root.status_text
  DataCell:
    size_hint_x: None
    width: '10dp'
    canvas.before:
      Color: 
        rgb: 0, 0, 0
      Rectangle:
        pos: self.pos
        size: self.size


<FieldLabel>
  text_size: self.size
  halign: 'left'
  valign: 'middle'
  size_hint_x: None
  width: '120dp'

<DataCell>
  height: '30dp'
  size_hint_y: None
  font_size: '14sp'
  color: 0, 0, 0, 1
  background_color: 0.7, 0.7, 0.7, 1
  markup: True
  canvas.before:
    Color: 
      rgba: self.background_color
    Rectangle:
      pos: self.pos
      size: self.size

<DataHeader>
  size_hint_y: None
  font_size: '14sp'
  height: '30dp'
  canvas.before:
    Color: 
      rgb: 0.2,0.2,0.2
    Rectangle:
      pos: self.pos
      size: self.size
